<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.danic.intent7">

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".Intent7">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Hora">
            <intent-filter>
                <action
                    android:name="es.vcarmen.intent.action.showtime"></action>
                <category
                    android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity
            android:name=".Fecha"
            android:label="FECHA SIMPLE">
            <intent-filter>
                <action
                    android:name="es.vcarmen.intent.action.showdate"></action>
                <category
                    android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
        <activity
            android:name=".Fecha2"
            android:label="FECHA AMPLIADA">
            <intent-filter>
                <action
                    android:name="es.vcarmen.intent.action.showdate"></action>
                <category
                    android:name="android.intent.category.DEFAULT"></category>
            </intent-filter>
        </activity>
    </application>

</manifest>