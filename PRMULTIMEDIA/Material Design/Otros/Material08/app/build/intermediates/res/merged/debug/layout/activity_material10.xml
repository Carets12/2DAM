<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#79dbf5"
    tools:context="es.vcarmen.material08.Material08">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        card_view:cardElevation="5dp"
        card_view:cardBackgroundColor="#edba83"
        card_view:cardCornerRadius="4dp"
        card_view:cardUseCompatPadding="true"
        >

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:src="@drawable/passat"
            android:scaleType="fitCenter"
            />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8c8fa6dc"
            android:text="VOLKSWAGEN PASSAT"
            android:textAlignment="center"
            android:textColor="#060679"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:theme="@style/RatingBar"
            android:elevation="6dp"
            android:numStars="5"
            />

    </android.support.v7.widget.CardView>


    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        card_view:cardBackgroundColor="#edba83"
        card_view:cardCornerRadius="4dp"
        card_view:cardElevation="5dp"
        card_view:cardUseCompatPadding="true">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleType="fitCenter"
            android:src="@drawable/p508" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#8c8fa6dc"
            android:text="PEUGEOT 508"
            android:textAlignment="center"
            android:textColor="#060679"
            android:textSize="20sp"
            android:textStyle="bold" />

        <RatingBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom|center"
            android:elevation="6dp"
            android:numStars="5"
            android:theme="@style/RatingBar" />

    </android.support.v7.widget.CardView>

</LinearLayout>
