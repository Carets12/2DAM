<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="es.vcarmen.material06.Material06"
    android:background="@color/colorAccent"
    android:orientation="vertical"
    >

    <android.support.design.widget.TabLayout
        android:id="@+id/tabLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="6dp"
        android:background="#cccccc"
        android:minHeight="?attr/actionBarSize"
        app:tabMode="fixed"
        app:tabGravity="fill"

        >

        </android.support.design.widget.TabLayout>

        <Button
            android:text="Quitar Tabs"
            android:id="@+id/quitarTab"
            android:layout_alignParentBottom="true"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignBottom="@+id/tabLayout"

            />

        <Button
            android:text="Anadir Tabs"
            android:id="@+id/anadirTab"
            android:layout_above="@+id/quitarTab"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            />

</RelativeLayout>
