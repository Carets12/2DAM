<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#e6f5dfa1"
    >

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Identifiquese para comenzar"
        android:textSize="18sp"
        android:textStyle="bold"
        android:textColor="#3b2503"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView
            android:id="@+id/texto1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Usuario:"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#970b0b"
            />

        <EditText
            android:id="@+id/EditText1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#970b0b"
            />

        <TextView
            android:id="@+id/texto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ContraseÃ±a:"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#1651bf"
            />

        <EditText
            android:id="@+id/EditText2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:inputType="textPassword"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#1651bf"
            />

        <Button
            android:id="@+id/buttonDialogo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="ACEPTAR"
            android:textSize="17sp"
            android:textStyle="bold"
            android:textColor="#0e9627"
            />

    </LinearLayout>

</LinearLayout>