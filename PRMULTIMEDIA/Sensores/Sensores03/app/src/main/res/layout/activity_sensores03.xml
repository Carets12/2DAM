<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="#136358"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="es.vcarmen.sensores03.Sensores03">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:layout_gravity="center"
        android:textSize="17sp"
        android:textColor="#ffffff"
        android:textStyle="bold"
        android:layout_margin="5dp"
        android:text="SENSOR GIROSCOPIO"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:textSize="17sp"
        android:textColor="#f6fa05"
        android:textStyle="bold"
        android:layout_margin="3dp"
        android:text="VELOCIDAD EJE X"
        />

    <TextView
        android:id="@+id/aceleracionx"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="17sp"
        android:textColor="#fff200"
        android:textStyle="bold"
        android:layout_margin="2dp"
        android:text="Aceleracion_X"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:textSize="17sp"
        android:textColor="#1cffe8"
        android:textStyle="bold"
        android:layout_margin="3dp"
        android:text="VELOCIDAD EJE Y"
        />

    <TextView
        android:id="@+id/aceleraciony"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="17sp"
        android:textColor="#23fde8"
        android:textStyle="bold"
        android:layout_margin="2dp"
        android:text="Aceleracion_Y"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:textSize="17sp"
        android:textColor="#54f434"
        android:textStyle="bold"
        android:layout_margin="3dp"
        android:text="VELOCIDAD EJE Z"
        />

    <TextView
        android:id="@+id/aceleracionz"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="17sp"
        android:textColor="#6ee736"
        android:textStyle="bold"
        android:layout_margin="2dp"
        android:text="Aceleracion_Z"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="0.5"
        android:textSize="17sp"
        android:textColor="#ffb43d"
        android:textStyle="bold"
        android:layout_margin="3dp"
        android:text="CONTADOR"
        />

    <TextView
        android:id="@+id/contador"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:textSize="17sp"
        android:textColor="#ffb74a"
        android:textStyle="bold"
        android:layout_margin="2dp"
        android:text="contador"
        />



</LinearLayout>
