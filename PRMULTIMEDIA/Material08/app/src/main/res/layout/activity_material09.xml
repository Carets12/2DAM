<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#8c8fa6dc"
    tools:context="es.vcarmen.material08.Material08">

    <android.support.v7.widget.CardView
        android:id="@+id/tarjeta"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        card_view:cardBackgroundColor="#daa986"
        card_view:cardCornerRadius="6dp"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="10dp"

        >

        <ImageView
            android:layout_height="match_parent"
            android:layout_width="match_parent"
            android:src="@drawable/cuadro"
            android:scaleType="centerCrop"

            />

        <TextView
            android:id="@+id/texto1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EL RAPTO DE LAS SABINAS"
            android:layout_gravity="bottom|center"
            android:gravity="bottom"
            android:textStyle="bold"
            android:textSize="30sp"
            android:background="#8c8fa6dc"
            android:textAlignment="center"
            android:textColor="#060679"

            />

        <TextView
            android:id="@+id/texto2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="JACQUES LOUIS DAVID"
            android:layout_gravity="top|center"
            android:textStyle="bold"
            android:textSize="20sp"
            android:background="#8c8fa6dc"
            android:textAlignment="center"
            android:textColor="#b10a0d"

            />


    </android.support.v7.widget.CardView>



</LinearLayout>
