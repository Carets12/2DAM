<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/lista1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/ListaEmpresas"
            android:textColor="@color/anadirEmpresaFab"
            android:textSize="23sp"
            android:textStyle="bold"
            android:layout_marginTop="10sp"
            android:layout_marginLeft="8sp"
            android:layout_marginBottom="10sp"
            />

        <Button
            android:id="@+id/borrarListaEmpresas"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/lista1"
            android:layout_marginTop="10sp"
            android:layout_alignParentRight="true"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:textColor="#d70d0d"
            android:gravity="center"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            android:textStyle="bold"
            android:textSize="15sp"
            android:text="BORRAR LISTA"
            />
    </RelativeLayout>

    <ListView
        android:id="@+id/listaEmpresas"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginLeft="8sp"
        >
    </ListView>

</LinearLayout>
