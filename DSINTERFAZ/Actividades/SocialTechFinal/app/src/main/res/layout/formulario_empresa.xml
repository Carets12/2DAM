<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/fondoFormulario"
    >

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/empresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/anadirEmpresaFab"
                android:text="@string/Empresa"
                android:textSize="27sp"
                android:textStyle="bold"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginBottom="5sp"
                android:layout_marginTop="10sp"
                />

            <EditText
                android:id="@+id/nombreEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/EditNombre"
                android:inputType="text"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:maxLength="15"
                />

            <EditText
                android:id="@+id/direccionEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/EditDireccion"
                android:inputType="text"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:maxLength="35"
                />

            <EditText
                android:id="@+id/localidadEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/EditLocalidad"
                android:inputType="text"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:maxLength="15"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/EditProvincia"
                android:textSize="17sp"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="5sp"
                />

            <Spinner
                android:id="@+id/spinnerProvinciaEmpresa"
                android:layout_width="fill_parent"
                android:layout_marginLeft="8sp"
                android:layout_marginRight="5sp"
                android:layout_height="wrap_content" />

            <EditText
                android:id="@+id/telefonoEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/EditTelefono"
                android:inputType="phone"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:maxLength="9"
                />

            <EditText
                android:id="@+id/emailEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/EditEmail"
                android:inputType="textEmailAddress"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:maxLength="35"
                />

            <EditText
                android:id="@+id/observacionesEmpresa"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="@string/EditObservacion"
                android:inputType="text"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:maxLength="80"
                />

            <EditText
                android:id="@+id/editContactoEmpresa"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="@string/EditContacto"
                android:inputType="text"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:maxLength="15"
                />

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="20sp"
                    >

                    <Button
                        android:id="@+id/anadirEmpresa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="@color/anadirEmpresaFab"
                        android:textSize="17sp"
                        android:textStyle="bold"
                        android:layout_marginLeft="5sp"
                        android:layout_marginRight="5sp"
                        android:text="@string/Anadir" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/n_total_de_empresas"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/numeroEmpresas"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text=""
                        android:textStyle="bold"
                        android:textColor="@color/anadirEmpresaFab"
                        android:textSize="19sp" />

                </LinearLayout>

            </LinearLayout>

    </ScrollView>

</LinearLayout>