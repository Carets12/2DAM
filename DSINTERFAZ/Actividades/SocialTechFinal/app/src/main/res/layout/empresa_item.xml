<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

        <ImageView
            android:id="@+id/foto2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:src="@drawable/empresaico"
            android:layout_margin="5sp"
            />

        <TextView
            android:id="@+id/empresaNombre"
            android:layout_width="match_parent"
            android:layout_toRightOf="@id/foto2"
            android:layout_height="wrap_content"
            android:textColor="@color/colorNombre"
            android:textSize="18sp" />

        <TextView
            android:id="@+id/empresaEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@id/foto2"
            android:layout_alignBottom="@id/foto2"
            android:textColor="@color/colorEmail"
            android:textSize="18sp" />

       </RelativeLayout>

</LinearLayout>
