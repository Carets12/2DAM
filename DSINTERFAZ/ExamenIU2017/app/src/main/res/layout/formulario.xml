<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.v7.widget.Toolbar xmlns:app="http://schemas.android.com/apk/res-auto"
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="?attr/colorPrimary"
        android:backgroundTint="#73df14"
        app:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ESTO ES UN TOOLBAR"
            android:textColor="#121111"
            android:textSize="30sp"
            android:gravity="center"
            />

    </android.support.v7.widget.Toolbar>


    <EditText
        android:id="@+id/titulo"
        android:inputType="text"
        android:textAlignment="center"
        android:layout_below="@+id/toolbar"
        android:layout_margin="5dp"
        android:hint="Ingrese un titulo"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/descripcion"
        android:layout_below="@+id/titulo"
        android:inputType="text"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginBottom="5dp"
        android:textAlignment="center"
        android:hint="Ingrese una descripcion"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/precio"
        android:layout_below="@+id/descripcion"
        android:inputType="number"
        android:textAlignment="center"
        android:layout_margin="5dp"
        android:hint="Ingrese un precio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/categoria"
        android:layout_below="@+id/precio"
        android:inputType="text"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:hint="Ingrese una categoria"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <EditText
        android:id="@+id/fecha"
        android:layout_below="@+id/categoria"
        android:inputType="date"
        android:layout_margin="5dp"
        android:textAlignment="center"
        android:hint="Ingrese una fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <Button
        android:id="@+id/vender"
        android:layout_marginLeft="5dp"
        android:layout_marginBottom="5dp"
        android:layout_marginRight="5dp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/fecha"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Vender"
        />

</RelativeLayout>